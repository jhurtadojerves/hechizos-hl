fondo = #202125
fondo_hechizos = #31333C
color_naranja = #FF6132

fondo_pastel = #FFEDE5

body
    background-color fondo
    color white
    
.Header
    display flex
    justify-content center
    
.Search
    margin 0 5% 1% 5%
    
    &-bar
        display flex
        justify-content center
        align-items center
    
    &-input
        width 100%
        padding 1em
        border-radius 5px
        border none
    
    &-resultados
        display flex
        flex-direction column
        overflow hidden
        margin 0.5% 0
        
        &--item 
            background-color white
            padding 1em
            border-radius 5px
            border none
            margin 0.1% 0
            text-decoration none
            color color_naranja
            

        &--info
            background-color fondo_pastel

.Spells
    display flex
    flex-direction column
    align-items center
    
    &-item
        padding 1%
        margin 1%
        width 88% 
        color color_naranja
        background-color fondo_hechizos
        text-decoration none
        
        
        & a 
            text-decoration none

    
    &-title
        color color_naranja
        
     &-description
         color white


.Footer
    width 100%
    background-color fondo_hechizos
    text-align center
    padding 1%
    font-size .8em
    
    & a
        text-decoration none
        color color_naranja