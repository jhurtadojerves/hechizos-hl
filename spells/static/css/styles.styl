fondo = #202125
fondo_hechizos = #31333C
hechizos_hover = #3B3E49
color_naranja = #FF6132
color_fucsia = #FF2554
fondo_pastel = #FFEDE5

Spells()
    padding 1%
    margin .1% 0
    width 88% 
    color color_naranja
    background-color fondo_hechizos
    text-decoration none

    
.Header
    display flex
    justify-content center
    
    &-container
        width 90%
    
    &-image
        width 100%

.Menu
    margin 0 auto
    background-color fondo_hechizos
    width 88%
    padding 1%
    
    &-list
        display flex
        list-style none
        justify-content space-around
              
            
    &-item
        margin 0
               
    
    &-title
        text-decoration none
        color white
        
.MenuLibro
    display none
    margin 0 auto
    background-color fondo_hechizos
    width 88%
    padding 1%
    
    &-list
        display flex
        list-style none
        justify-content space-around
    &-item
        margin 0
        
        & a
            color white
            text-decoration none
    
.Search
    margin .2% 5% 1% 5%
    
    &-bar
        display flex
        justify-content center
        align-items center
    
    &-input
        width 100%
        padding 1em
        border none
    
    &-resultados
        display flex
        flex-direction column
        overflow hidden
        margin 0.5% 0
        
        &--item 
            background-color white
            padding 1em
            border-radius 5px
            border none
            margin 0.1% 0
            text-decoration none
            color color_naranja
            
            

        &--info
            background-color fondo_pastel

.Spells
    display flex
    flex-direction column
    align-items center
    
    &-item
        Spells()
        
        &:hover
            background-color hechizos_hover
            transition .3s cubic-bezier(0.6, -0.28, 0.74, 0.05)
            transform scale(1.1)
            box-shadow 5px 5px 92px -12px black
        
        
        & a 
            text-decoration none
    
    &-detail
        Spells()
    
    &-title
        color color_naranja
        display inline
        margin .8%
    
    &-type
        font-size 80%
        background-color color_fucsia
        color white
        padding .2em
        border-radius 5px
        
     &-description
         color white
         text-align justify
         line-height 24px
         text-shadow 0 0 1px #fff
         
.Pagination
    display flex
    justify-content center
    margin 1%
    
    &-button
        background-color color_fucsia
        padding 1em
        text-decoration none
        color white
        margin 0 .1%

.Footer
    max-width 90%
    background-color fondo_hechizos
    text-align center
    padding 1%
    font-size .8em
    margin 0 auto
    
    & a
        text-decoration none
        color color_naranja