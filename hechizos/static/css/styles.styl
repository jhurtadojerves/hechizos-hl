fondo = #202125
fondo_hechizos = #31333C
color_naranja = #FF6132

body
    background-color fondo
    
.Header
    display flex
    justify-content center
    
.Search
    margin 0 5% 1% 5%
    
    &-bar
        display flex
        justify-content center
        align-items center
    
    &-input
        width 100%
        padding 1em
        border-radius 5px
        border none
    
    &-resultados
        display flex
        flex-direction column
        overflow hidden
        
        &--item 
            background-color white
            padding 1em
            border-radius 5px
            border none
            margin .5% 0
            text-decoration none
            color color_azul
        
        &--info
            background-color #ffede5
            color darkblue

.Spells
    display flex
    flex-direction column
    align-items center
    
    &-detail
        background-color fondo_hechizos
    
    &-title
        color color_naranja
    
    &-item
        padding 1%
        margin 1%
        width 89% 
        color color_naranja
        background-color fondo_hechizos
        text-decoration none
        
     &-description
         color white

.Footer
    width 100%
    background-color fondo_hechizos
    text-align center
    padding 1%
    font-size .8em
    
    & a
        text-decoration none
        color color_naranja